{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 */
#}

{% if content %}
<div class="pdf-resources__card">
  <div class="pdf-resources__card-details">
    {% if file_name %}
      <h4 class="pdf-resources__card-details--title">{{ file_name|t }}</h4>
    {% endif %}
    {% if file_size %}
      <p class="pdf-resources__card-details--size">{{ file_size|replace({'MB': ' MB'}) }}</p>
    {% endif %}
    <div class="pdf-resources__card-details--action">
      {% if view_url %}
      <span class="pdf-resources__card-details--view action-link">
        <a href="{{ view_url }}" >{{ 'Open'|t }}</a>
      </span>
      {% endif %}
      {% if file_url %}
        <span class="pdf-resources__card-details--download action-link">
          <a href="{{ file_url }}" ><span>{{ 'Download PDF'|t }}</span></a>
        </span>
        <span class="pdf-resources__card-details--share action-link">
          <a href="mailto:?subject={{ file_name|t }}&body=Download file:{{ file_url }}" >{{ 'Share'|t }}</a>
        </span>
      {% endif %}
      {% if view_url %}
        <span class="pdf-resources__card-details--copy-text action-link">
          <span class="copy-text" url="{{ view_url }}">{{ 'Copy'|t }}</span>
        </span>
      {% endif %}
    </div>
  </div>
</div>
{% endif %}
