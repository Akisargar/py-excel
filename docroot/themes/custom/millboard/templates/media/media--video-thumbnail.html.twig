{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 */
#}
{{ content|without('name') }}
{% set title = name|split('.') %}
<div class="title">
	<h5 class="title__name">
		{{ title[0]|replace({'_': ' '}) }}</h5>
	<span class="title__extension">.{{ title[1]|t }}</span>
</div>
